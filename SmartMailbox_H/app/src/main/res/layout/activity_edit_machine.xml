<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditMachine">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/machineNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello world"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/avenir1"
        android:textSize="32dp"
        android:textColor="@color/darkblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/roundedbckstroke"

        android:hint="New name"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machineNameEdit" />

    <EditText
        android:id="@+id/editLocal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"

        android:background="@drawable/roundedbckstroke"
        android:hint="New Location"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName" />

    <Button
        android:layout_marginVertical="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update info"
        android:id="@+id/updateBtn"
        android:padding="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/avenir2"
        android:background="@drawable/roundedbckbtn"
        app:layout_constraintEnd_toEndOf="@+id/editLocal"
        app:layout_constraintTop_toBottomOf="@+id/editLocal" />

    <ProgressBar
        android:id="@+id/esefe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>